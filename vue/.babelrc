{
    "presets": [
        [
            "env",
            {
                "modules": false,
                "targets": {
                    "browsers": [
                        "> 1%",
                        "last 2 versions",
                        "not ie <= 8"
                    ]
                }
            }
        ],
        "es2015",
        "stage-0"
    ],
    "plugins": [
        "transform-vue-jsx",
        [
            "transform-runtime",
            {
                "polyfill": true
            }
        ]
    ],
    "env": {
        "test": {
            "presets": [
                "env",
                "stage-2"
            ],
            "plugins": [
                "transform-vue-jsx",
                "transform-es2015-modules-commonjs"
            ]
        }
    }
}
